{
    "suggest.noselect": false,
    "diagnostic.errorSign": "âœ˜",
    "diagnostic.warningSign": "!",
    "diagnostic.infoSign": "?",
    "diagnostic.checkCurrentLine": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "html",
        "css",
        "scss",
        "go",
        "sh",
        "yaml",
        "json",
        "sql",
        "pyright",
        "markdownlint",
        "ruby"
    ],
    "coc.preferences.hoverTarget": "float",
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        }
    },
    "go.goplsOptions": {
        "staticcheck": true
    }
}
